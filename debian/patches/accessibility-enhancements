+    def get_focusable_widgets(self):
+        widgets = []
+        for field, widget in self.field_inputs.items():
+            if isinstance(widget, (QLineEdit, QTextEdit, QComboBox)):
+                widgets.append(widget)
+            elif isinstance(widget, tuple) and field == "exactdots":
